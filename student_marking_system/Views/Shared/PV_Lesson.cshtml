<h2>Предмет: @UserInfo.CurSubject</h2>
<h3>Группа: @UserInfo.CurGroup</h3>

<button class="btn btn-outline-danger" onclick="LessonOff()">Закончить занятие</button>

<div class="btn-group mt-3 d-inline-block">
    <button class="btn btn-outline-primary me-2" onclick="CameraOn()">Камера старт</button>
    <button class="btn btn-outline-danger" onclick="CameraOff()">Камера стоп</button>
</div>


<div class="mt-3">
    <table class="table w-auto">

        <tr class="table-dark"> <th>ID</th> <th>ФИО</th> <th>Присутствие</th> </tr>

        @foreach (var student in UserInfo.CurStudentsNames)
        {
            <tr scope="row">
                <td>@student.Id</td>
                <td>@student.Full_name</td>
                <td class="text-center" id="@student.Id"> @if (student.IsThere)
                    {
                        <span>&#10004</span>
                    } 
                </td>
            </tr>
        }
    </table>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>

    function MarkStudent(id) {
        $(`#${id}`).html("<span>&#10004</span>");
    }


    function CameraOff() {
        $.ajax({
            type: "POST",
            url: "/Home/CameraOff"
        });
    };


    function CameraOn() {
        $.ajax({
            type: "POST",
            url: "/Home/CameraOn"
        });
    };


    function LessonOff() {
        $.ajax({
            type: "POST",
            url: "/Home/LessonOff",
            success: function () {
                window.location.reload(true);
            }
        });
    }

</script>