@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<style>

    .element {
        width: 30%;
        min-width: 200px;
    }

    ._input {
        border-color: #3b4f6f;
        border-width: 2px;
    }

    .center {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .warning {
        color: #ff6666;
        font-weight: 500;
    }

    .btn-login {
        color: #fff;
        background-color: #3b4f6f;
        border-color: #3b4f6f;
    }

    .btn-login:hover {
        color: #fff;
        background-color: #399be2;
        border-color: #399be2;
    }

</style>

@model face_rec_test1.Models.LoginModel

<div class="center">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" method="post">

        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <span class="warning" asp-validation-for="Login"></span>
            <br />
            <span class="warning" asp-validation-for="Password"></span>
        </div>
        

        <div class ="mt-3">
            <input placeholder="Логин" class="form-control _input element" type="text" asp-for="Login" />
        </div>

        <div class="mt-3">
            <input placeholder="Пароль" class="form-control _input element" typr="password" asp-for="Password" />
        </div>

        <div class="mt-3">
            <input class="btn btn-login element" type="submit" value="Войти" />
        </div>

    </form>
</div>



@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

